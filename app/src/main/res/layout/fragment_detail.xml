<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.fragments.product.DetailFragment">


    <ImageView
        android:id="@+id/ivProductDetailImage"
        android:layout_width="@dimen/card_image_detail_width"
        android:layout_height="@dimen/card_image_detail_height"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ivProductDetailImage"
        app:layout_constraintStart_toStartOf="@+id/ivProductDetailImage"
        app:layout_constraintTop_toBottomOf="@+id/ivProductDetailImage" />

    <TextView
        android:id="@+id/tvPriceProductDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvProductNameDetail"
        app:layout_constraintStart_toStartOf="@+id/tvProductNameDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvProductNameDetail" />

    <TextView
        android:id="@+id/tvConditionProductDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvPriceProductDetail"
        app:layout_constraintStart_toStartOf="@+id/tvPriceProductDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceProductDetail" />

    <TextView
        android:id="@+id/tvQuantityDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvConditionProductDetail"
        app:layout_constraintStart_toStartOf="@+id/tvConditionProductDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvConditionProductDetail" />

    <TextView
        android:id="@+id/tvAmountDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvQuantityDetail"
        app:layout_constraintStart_toStartOf="@+id/tvQuantityDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantityDetail" />

    <TextView
        android:id="@+id/tvStateProductDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvAmountDetail"
        app:layout_constraintStart_toStartOf="@+id/tvAmountDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvAmountDetail" />

    <TextView
        android:id="@+id/tvCityNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvStateProductDetail"
        app:layout_constraintStart_toStartOf="@+id/tvStateProductDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvStateProductDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>